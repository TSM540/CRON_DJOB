generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum ExecutionStatus {
  Idle
  Pending
  Executed
  ExecutedWithErrors
}

model Task {
  id         Int             @id @default(autoincrement())
  title      String
  daysOfWeek Int[]
  time       String
  timezone   String
  isExecuted ExecutionStatus @default(Idle)
}
